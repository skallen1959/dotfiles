window {
    margin: 10px;
    border: 2px solid #1a1a1a;
    background-color: rgba(90, 90, 90, 0.7);
    border-radius: 10px;
    font-family: "JetBrains Mono", monospace;
    font-size: 14px;
}

#input {
    margin: 10px;
    border: none;
    border-radius: 8px;
    background-color: #cccccc;
    color: #ffffff;
    padding: 8px;
}

#entry {
    margin: 5px;
    padding: 8px;
    border-radius: 8px;
    color: #ffffff;
}

#entry:selected {
    background-color: #1e88e5;
    border-radius: 8px;
    color: #ffffff;
}

#text {
    color: #ffffff;
}

#image {
    margin-right: 10px;
}
